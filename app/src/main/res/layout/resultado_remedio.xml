<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/Semilla"
        android:layout_marginTop="36dp"
        android:id="@+id/imageView5"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/subtitulo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Semillas de girasol para el higado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/imageView5" />

    <TextView
        android:text="@string/advertencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titpre"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="29dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/remediodescp"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:text="Encuentra remedios caseros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/subtitulo"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView7"
        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. "
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/imageView5"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:text="@string/precauciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remediodescp"
        android:text="lorem_ipsum_dolor_sit_amet_consectetuer_adipiscing_elit_aenean_commodo_ligula_eget_dolor_aenean_massa_cum_sociis_natoque_penatibus_et_magnis_dis_parturient_montes_nascetur_ridiculus_mus"
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView9"
        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. "
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:layout_below="@+id/titpre"
        android:layout_alignParentEnd="true" />
</RelativeLayout>