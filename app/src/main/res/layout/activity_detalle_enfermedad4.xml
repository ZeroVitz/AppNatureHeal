<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2" android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_enfermedad4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.greciaguzmn.natureheal.DetallesEnfermedad"
    android:weightSum="1">

    <ImageView
        android:id="@+id/dimagenEnfermedad4"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:src="@drawable/fiebre" />

    <TextView
        android:id="@+id/dtituloenfermedad4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/parrafoFiebre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06" />

    <TextView
        android:id="@+id/SintomasFiebre"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Sintomas:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/parrafoSintomasFiebre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <TextView
        android:id="@+id/precaucionesFiebre"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Precauciones:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/parrafo1PreFiebre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06" />

    <TextView
        android:id="@+id/recomendacionesFiebre"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Recomendaciones:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/parrafoRecFiebre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10" />



</LinearLayout>
</ScrollView>