<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.greciaguzmn.natureheal.fragmentHome">

    <TextView
        android:text="BIENVENIDOS A NATURE HEAL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/titulo"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginBottom="4dp"
        tools:layout_marginBottom="2dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="31dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/titulo"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp" />

    <Button
        android:text="Buscar por enfemerdades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEnfermedad"
        android:layout_alignBaseline="@+id/buttonRemedio"
        android:layout_alignBottom="@+id/buttonRemedio"
        android:layout_alignEnd="@+id/txtcopyright"
        android:layout_marginEnd="13dp" />

    <TextView
        android:text="Copyright@DreamTeamOrigins"
        android:textColor="#050505"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:id="@+id/txtcopyright"
        android:layout_marginEnd="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/leaf"
        android:id="@+id/imageView6"
        android:layout_marginStart="49dp"
        android:layout_below="@+id/titulo"
        android:layout_alignStart="@+id/buttonRemedio" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/food"
        android:id="@+id/imageView2"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/titulo"
        android:layout_alignStart="@+id/txtcopyright"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Buscar remedios caseros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRemedio"
        android:duplicateParentState="false"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/txtcopyright"
        android:layout_alignStart="@+id/imageView3" />


</RelativeLayout>
